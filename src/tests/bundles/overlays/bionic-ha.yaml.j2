relations:
- - keystone
  - keystone-hacluster
- - openstack-dashboard
  - openstack-dashboard-hacluster
applications:
  keystone:
    num_units: 3
    options:
      vip: {{ OS_VIP00 }}
  openstack-dashboard:
    num_units: 3
    options:
      vip: {{ OS_VIP01 }}
  keystone-hacluster:
    charm: ch:hacluster
    num_units: 0
    options:
      corosync_transport: unicast
      cluster_count: 3
    channel: 2.4/edge
  openstack-dashboard-hacluster:
    charm: ch:hacluster
    num_units: 0
    options:
      corosync_transport: unicast
      cluster_count: 3
    channel: 2.4/edge
